<div class="session form">
  <div class="col-lg-offset-2 col-lg-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title text-center">Sign In</h3>
      </div>
      <div class="panel-body">
        <%= form_tag :login, html: { class: 'form-hozisontal' } do %>
          <div class="form-group">
            <%= label_tag :email %>
            <%= text_field_tag :email, nil, class: 'form-control input-lg' %>
          </div>
          <div class="form-group">
            <%= label_tag :password %>
            <%= password_field_tag :password, nil, class: 'form-control input-lg' %>
          </div>
          <div class="actions">
            <%= submit_tag "Login", class: 'btn-lg btn-primary btn-block' %>
          </div>
          <h4 class="text-center">or</h4>
          <%= link_to "Sign in with Twitter", "/auth/twitter", class: 'btn-lg btn-primary btn-block text-center' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
