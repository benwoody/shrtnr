<div class="container">
  <div class="session form">
    <div class="col-md-offset-2 col-lg-7">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title text-center">Sign In</h3>
        </div>
        <div class="panel-body">
          <%= form_tag :login, html: { class: 'form-hozisontal' } do %>
            <div class="form-group">
              <%= label_tag :email %>
              <%= text_field_tag :email, nil, class: 'form-control input-lg' %>
            </div>
            <div class="form-group">
              <%= label_tag :password %>
              <%= password_field_tag :password, nil, class: 'form-control input-lg' %>
            </div>
            <div class="form-group">
              <%= submit_tag "Login", class: 'btn-lg btn-primary' %>
            </div>
          <% end %>
            </div class="actions">
              <%= link_to "Sign-In with Twitter", "/auth/twitter", class: 'btn-lg btn-primary btn-block text-center' %>
            <div>
        </div>
      </div>
    </div>
  </div>
</div>
