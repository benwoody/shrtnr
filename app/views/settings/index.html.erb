
<div class="settings form">
  <div class="col-lg-offset-2 col-lg-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title text-center">Settings</h3>
      </div>
      <div class="panel-body">
        <%= form_for :settings, remote: true, id: 'update-settings',
                                method: :put, html: { class: 'form-horizontal' } do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control input-lg" %>
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control input-lg" %>
          </div>
          <div class="actions">
            <%= f.submit "Update", class: "btn-lg btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
      <div class="panel-body">
        <h4 class="text-center">To use with other apps</h4>
        <h6 class="text-center">Copy & Paste the following into your app:</h6>
        <pre id="api-key" class="text-center">http://uwshrtnr.herokuapp.com/api/v1/links/create?api_key=<%= @settings.api_key %>&url=%@</pre>
        <%= button_to 'Regenerate Key', settings_regenerate_key_path, remote: true, method: :put, class: "btn-lg btn-primary btn-block", data: {confirm: "Are you sure?"} %>
      </div>
    </div>
  </div>
</div>
