
  <div class="settings form">
    <div class="col-md-offset-2 col-md-8">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title text-center">Settings</h3>
        </div>
        <div class="panel-body">
          <%= form_for :settings, html: { class: 'form-horizontal' } do |f| %>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: "form-control input-lg" %>
            </div>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, class: "form-control input-lg" %>
            </div>
            <div class="form-group">
              <%= f.submit "Update", class: "btn-lg btn-primary" %>
            </div>
            <div class="actions">
              <% unless current_user.uid %>
                <%=link_to "Link Twitter Account", "auth/twitter", class: "btn btn-info btn-xl navbar-btn" %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
