<div class="user form">
  <div class="col-lg-offset-2 col-lg-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title text-center">Sign Up</h3>
      </div>
      <div class="panel-body">
        <%= form_for @user do |f| %>
          <% if @user.errors.any? %>
            <div class="error_messages">
              <ul>
                <% for message in @user.errors.full_messages %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control input-lg' %>
          </div>
          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control input-lg' %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: 'form-control input-lg' %>
          </div>
          <div class="actions">
            <%= f.submit "Submit", class: 'btn-lg btn-primary btn-block' %>
          </div>
          <h4 class="text-center">or</h4>
          <%= link_to "Sign in with Twitter", "/auth/twitter", class: 'btn-lg btn-primary btn-block text-center' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
