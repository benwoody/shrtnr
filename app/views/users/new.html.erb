
  <div class="session form">
    <div class="col-md-offset-2 col-md-8">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title text-center">Sign Up</h3>
        </div>
        <div class="panel-body">
          <%= form_for @user do |f| %>
            <% if @user.errors.any? %>
              <div class="error_messages">
                <ul>
                  <% for message in @user.errors.full_messages %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="field">
              <%= f.label :name %>
              <%= f.text_field :name, class: 'form-control input-lg' %>
            </div>
            <div class="field">
              <%= f.label :email %>
              <%= f.text_field :email, class: 'form-control input-lg' %>
            </div>
            <div class="field">
              <%= f.label :password %>
              <%= f.password_field :password, class: 'form-control input-lg' %>
            </div>
            <div class="field">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, class: 'form-control input-lg' %>
            </div>
            <div class="actions">
              <%= f.submit "Submit", class: 'btn-lg btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
